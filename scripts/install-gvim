echo '- Installing gvim'
sudo apt install vim-gtk
echo '- Setting up my vim configs'
git clone https://github.com/ga-hegsvold/.vim.git ~/.vim && ln -s ~/.vim/.vimrc ~/.vimrc

echo '- Installing vim plugins (https://vimawesome.com/)'
git clone https://github.com/vim-airline/vim-airline ~/.vim/bundle/vim-airline
git clone https://github.com/chrisbra/csv.vim ~/.vim/bundle/csv
git clone https://github.com/ekalinin/Dockerfile.vim.git ~/.vim/bundle/Dockerfile
git clone https://github.com/airblade/vim-gitgutter ~./vim/bundle/vim-gitgutter
git clone https://github.com/elzr/vim-json ~/.vim/bundle/vim-json
git clone https://github.com/scrooloose/nerdtree.git ~/.vim/bundle/nerdtree
git clone https://github.com/google/vim-searchindex ~/.vim/bundle/vim-searchindex
git clone https://github.com/sukima/xmledit.git ~/.vim/bundle/xmledit
