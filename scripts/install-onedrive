echo '- Linux Mint 20.x:'
echo 'https://github.com/abraunegg/onedrive/blob/master/docs/ubuntu-package-install.md'
echo '- Linux Mint 21.x:'
echo 'Instructions: https://linuxhint.com/install-and-use-onedrive-on-linux-mint/'
echo 'sudo apt update'
echo 'sudo apt install onedrive'
echo '- Configure onedrive'
echo 'onedrive'
echo '- Test sync'
echo 'onedrive --synchronize --verbose --dry-run'
echo '- Actual sync'
echo 'onedrive --synchronize'
echo '- Enable OneDrive service'
echo 'systemctl --user enable onedrive'
echo '- Start OneDrive service'
echo 'systemctl --user start onedrive'
